@model WakeyWakey.Models.Task

<div class="task">
    <div>
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
    </div>
    <!-- Other task details -->

    <!-- Subtasks -->
    @if (Model.Subtasks != null && Model.Subtasks.Any())
    {
        <div class="subtasks">
            @foreach (var subtask in Model.Subtasks)
            {
                @Html.Partial("_TaskItem", subtask) // Recursively render subtasks
            }
        </div>
    }

    <div>
        <a href="@Url.Action("Edit", "Task", new { id = Model.Id })" class="btn edit">Edit</a>
        <a href="@Url.Action("Delete", "Task", new { id = Model.Id })" class="btn delete">Delete</a>
    </div>
</div>